<div class="w-full rounded-xl p-2" {{ attributes }}>
    <div class="form-group w-full flex items-center  mb-3">
        <label for="audio-file" class="form-label text-sm">Choisi un fichier</label>
        <input
                type="file"
                name="audioFile"
                data-model="audioFile"
                autocomplete="off"
                id="audioFile"
                class="form-control-file {{ error ? 'is-invalid' : '' }}"

        >

        <button data-action="live#action"
                data-live-action-param="files|uploadFiles"
                class="btn btn-sm btn-neutral rounded-full">
            C'est parti !
        </button>
    </div>
    <div class="w-full p-1">
        {% if error %}
            <div class="invalid-feedback">{{ error }}</div>
        {% endif %}
    </div>


</div>

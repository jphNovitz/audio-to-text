{% extends 'base.html.twig' %}

{% block body %}
    <section class="w-full  mx-auto md:w-4/5 lg:w-2/3 flex flex-col p-8 my-16 space-y-8 rounded-lg bg-base-light">
        <h2 class="text-lg font-semibold">Téléchargement du fichier audio</h2>
        <p>Veuillez télécharger un fichier audio via le formulaire ci-dessous.</p>

        {{ form_start(form, {'attr': {
            'class': 'bg-surface-light p-4 rounded-lg flex flex-col space-y-4',
            'data-turbo': 'false'
        }}) }}
        <div class="mb-4">
            {{ form_label(form.file) }}
        </div>
        <div>
            {{ form_widget(form.file) }}
        </div>
        <div class="py-8">
            <button type="submit" class="bg-surface-secondary text-content-secondary font-black px-3 py-2.5 rounded-lg">Envoi !</button>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}